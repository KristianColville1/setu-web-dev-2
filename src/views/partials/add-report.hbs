<form class="box" action="/station/{{station._id}}/addreport" method="POST">
    <label class="label">Enter Report Details:</label>
    <div class="field is-horizontal">
        <div class="field-body">
            <div class="field">
                <label class="label">Code</label>
                <input class="input" type="text" placeholder="00" name="code">
            </div>
            <div class="field">
                <label class="label">Temperature</label>
                <input class="input" type="text" placeholder="00.00C" name="temp">
            </div>
            <div class="field">
                <label class="label">Wind Speed</label>
                <input class="input" type="text" placeholder="00.00kMh" name="windSpeed">
            </div>
            <div class="field">
                <label class="label">Wind Direction</label>
                <div class="control">
                    <div class="select">
                        <select name="windDirection">
                            <option value="0">North (0°)</option>
                            <option value="45">Northeast (45°)</option>
                            <option value="90">East (90°)</option>
                            <option value="135">Southeast (135°)</option>
                            <option value="180">South (180°)</option>
                            <option value="225">Southwest (225°)</option>
                            <option value="270">West (270°)</option>
                            <option value="315">Northwest (315°)</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="field">
                <label class="label">Pressure</label>
                <input class="input" type="text" placeholder="000hPa" name="pressure">
            </div>
        </div>
    </div>
    <button class="button is-primary">Add Report</button>
</form>