<table class="table is-fullwidth is-striped is-hoverable">
    <thead class="has-text-centered" style="background-color: #e5e5e5;">
        <tr>
            <th>Code</th>
            <th>Temp</th>
            <th>Wind Speed</th>
            <th>Wind Direction</th>
            <th>Pressure</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each station.reports}}
        <tr>
            <td>{{code}}</td>
            <td>{{temp}} C</td>
            <td>{{windSpeed}}kMh</td>
            <td>{{windDirection}}Deg</td>
            <td>{{pressure}}hPa</td>
            <td>
                <a href="/station/{{../station._id}}/deletereport/{{_id}}" class="button">
                    {{>icons/delete}}
                </a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>